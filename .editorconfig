root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[**.{js,jsx,mjs,cjs,ts,tsx,tjs,tjs,css,graphql,gql,json,yaml,yml}]
indent_style = spaces
indent_size = 2
trim_trailing_whitespace = true

[**.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
